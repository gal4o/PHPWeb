{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data" action="{{ path('tariff_delete', {id:tariff.id}) }}" method="POST">
                <fieldset>
                    <legend>Delete Tariff</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="tariff_treatment">Treatment</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="tariff_treatment"
                                   placeholder="Tariff Treatment" name="tariff[treatment]" value="{{ tariff.treatment }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="price">Price</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="tariff_price"
                                   placeholder="Tariff Price" name="tariff[price]"  value="{{ tariff.price }}" disabled>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('tariff_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}





