{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                {% if app.user and (app.user.isAdmin() or app.user.isMoney()) %}
                <a href="{{ path('tariff_create') }}">Create new tariff</a><br><br>
                {% endif %}
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Treatment</th>
                        <th>Price</th>
                        {% if app.user and (app.user.isAdmin() or app.user.isMoney()) %}
                        <th colspan="2">Functions</th>
                        {% endif %}
                    </tr>
                    </thead>
                    {% for tariff in tariffs %}
                        <tr>
                            <td>{{ tariff.treatment }}</td>
                            <td>{{ tariff.price }}</td>
                            {% if app.user and(app.user.isAdmin() or app.user.isMoney()) %}
                            <td><a class="btn btn-success btn-xs" href="{{ path('tariff_edit',{'id':tariff.id}) }}">Edit</a></td>
                            <td><a class="btn btn-danger btn-xs" href="{{ path('tariff_delete',{'id':tariff.id}) }}">Delete</a></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </table>

            </div>
        </div>
    </div>

{% endblock %}
