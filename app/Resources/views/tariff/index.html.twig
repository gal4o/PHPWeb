{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('tariff_create') }}">Create new tariff</a><br><br>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Treatment</th>
                        <th>Price</th>
                        <th colspan="2">Functions</th>
                    </tr>
                    </thead>
                    {% for tariff in tariffs %}
                        <tr>
                            <td>{{ tariff.id }}</td>
                            <td>{{ tariff.treatment }}</td>
                            <td>{{ tariff.price }}</td>
                            <td><a class="btn btn-success btn-xs" href="{{ path('tariff_edit',{'id':tariff.id}) }}">Edit</a></td>
                            <td><a class="btn btn-danger btn-xs" href="{{ path('tariff_delete',{'id':tariff.id}) }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                </table>
                <ul class="pagination">
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
