{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
        {% if app.user %}
                {#<a href="{{ path('user_register') }}">Create new user</a><br><br>#}
                <table class="table table-bordered">
                    <thead>
                <tr>
                    <th>Id</th>
                    <th>Full name</th>
                    <th>Sum</th>
                    <th>Profile</th>
                    <th colspan="3">Functions</th>
                </tr>
                    </thead>
            {% for oneUser in users|sort('fullName') %}
                <tr>
                    <td>{{ oneUser.id }}</td>
                    <td>{{ oneUser.fullName }}</td>
                    <td>Sum</td>
                    <td><a class="btn btn-default btn-xs" href="{{ path('user_profile',{'id':oneUser.id}) }}">View</a></td>
                    <td><a class="btn btn-success btn-xs" href="{{ path('user_edit',{'id':oneUser.id}) }}">Edit</a></td>
                    <td><a class="btn btn-danger btn-xs" href="{{ path('user_delete',{'id':oneUser.id}) }}">Delete</a></td>
                </tr>
            {% endfor %}
            </table>
                <ul class="pagination">
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </div>
        </div>
        {% else %}
        <div class="row">
            <div class="col-md-6">
                <h1>Good morning fellow workers!</h1>
                <img src="{{ asset('uploads/coffee.jpg') }}" width="400" height="300" alt="Coffee">
            </div>

            <div class="col-md-6">
                <br><br><br>
                <p>I wish all of your patients to come out of the clinic like this:</p><br>
                <img src="{{ asset('uploads/smile.jpg') }}" width="400" height="300" alt="Smile">
            </div>

        </div>
        {% endif %}
    </div>

{% endblock %}
